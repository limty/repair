			  <input type="hidden" name="item[repairer]" value="<%=@current%>">
			  <input type="hidden" name="item[completed]" value="false">

	<% end %>
<% elsif @current == @item.user_id && @item.repairing == false %>
	<%= form_with scope: :items, model: @item, local: true do |form| %>
