				<input type="hidden" name="item[repairing]" value="false">
				<input type="hidden" name="item[completed]" value ="true">
				<input type="hidden" name="item[repairer]" value="<%=@current%>">
				<input type="hidden" name="item[description]" value="<%=@item.description%>">
				<button type="submit">Completed</button>
	<% end %>
	<%= form_with scope: :items, model: @item, local: true do |form| %>

<div class="container">
	<div class="row">
		<div class="card  m-auto" style="width: 21rem;">
			<div class="card-body">
				<img src="<%= image_url (@item.image) %>" class="card-img-top img-fluid">
