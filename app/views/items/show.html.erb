

<a class="img-link" href="/users/<%= @item.user_id%>">
	<%= cl_image_tag(@item.image) %>
</a>
<p><%= @item.description %><p>
<% if @current == @item.user_id && @item.repairing == false %>
	<p>item still waiting for help</p>
<% elsif @current == @item.user_id && @item.repairing == true %>
	<a href="/items/<%= @item.id %>/edit">
		<button>Items under repair</button>
	</a>
<% elsif @current == @item.user_id && @item.completed == true %>
	<p>item was completed by other</p>
<% elsif @current == @item.repairer && @item.repairing == true %>
	<a href="/items/<%= @item.id %>/edit">
		<button>You are repairing</button>
	</a>
<% elsif @current == @item.repairer && @item.completed == true %>
	<p>You have completed the item</p>
<% else %>
	<%= form_with scope: :items, model: @item, local: true do |form| %>
				<input type="hidden" name="item[repairing]" value="true">
				<button type="submit">I want to repair</button>
	<% end %>
<% end %>